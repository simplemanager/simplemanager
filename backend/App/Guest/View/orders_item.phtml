switch (true) {
    case $row['status'] === BDB::STATUS_SENT : 
        $status = 'default';
        $statusLabel = H::html(__("Non lu"))->addCssClasses(['label', 'label-default']);
        $color = 'gray';
        $important = true;
        break; 
    case $row['status'] === BDB::STATUS_READ :
        $status = 'warning';
        $statusLabel = H::html(__("A signer"))->addCssClasses(['label', 'label-warning']);
        $color = 'yellow';
        $important = true;
        break; 
    case $row['status'] === BDB::STATUS_PROCESSED : 
        $status = 'success';
        $statusLabel = H::html(__("SignÃ©"))->addCssClasses(['label', 'label-success']);
        $color = 'green';
        $important = false;
        break;
    default : 
        throw new ArchException('Unknown status [' . $row['statuts'] . ']');
}

// TODO : mettre les dates sous forme de champs pour pouvoir trier / filtrer...
